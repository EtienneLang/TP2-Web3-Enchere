{% extends "base.jinja" %}
{% block contenu %}

    <div class="d-flex align-items-center flex-column p-5">
        <h1 class="p-5">Authentification</h1>
        <form action="/compte/authentifier" method="post" class="d-flex flex-column w-50 ">
            <label for="txtnom">Nom utilisateur</label>
            <input type="email" name="courriel" id="courriel" value="{{ courriel }}" class="{{ classe_courriel}} form-control-lg"/>
            <label for="mdp">Mot de passe</label>
            <input type="password" name="mdp"id="mdp" class="{{ classe_mdp }} form-control-lg"/>
            <div class="invalid-feedback">
                <p>{{ texte_invalide }}</p>
            </div>
            <button class="btn btn-primary mt-3" type="submit" class="mt-3">Se connecter</button>
        </form>
    </div>


{% endblock %}
